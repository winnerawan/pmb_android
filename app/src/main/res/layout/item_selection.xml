<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical"
                                    app:cardElevation="3dp"
                                    android:layout_marginRight="@dimen/padding_16dp"
                                    android:layout_marginLeft="@dimen/padding_16dp"
                                    android:layout_marginBottom="@dimen/padding_8dp"
                                    android:layout_marginTop="@dimen/padding_8dp"
                                    app:cardCornerRadius="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <LinearLayout android:background="@drawable/gradient3" android:id="@+id/bg" android:weightSum="1" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout android:layout_weight="0.65"  android:orientation="vertical"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content">

            <TextView android:id="@+id/no_reg" android:layout_marginBottom="@dimen/padding_8dp" android:padding="@dimen/padding_16dp"
                      android:textColor="#E6FFFFFF"  android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

            <TextView android:id="@+id/name" android:textSize="24sp" android:paddingStart="@dimen/padding_16dp" android:paddingLeft="@dimen/padding_16dp" android:paddingTop="@dimen/padding_8dp" android:textColor="@color/white"
                      android:layout_width="match_parent" android:layout_height="wrap_content" />

            <TextView android:id="@+id/prodi" android:textSize="12sp" android:paddingStart="@dimen/padding_16dp" android:paddingLeft="@dimen/padding_16dp" android:padding="@dimen/padding_8dp" android:textColor="#E6FFFFFF"
                      android:layout_width="match_parent" android:layout_height="wrap_content" />

            <Button android:id="@+id/btn_download" android:textSize="12sp" android:paddingLeft="@dimen/padding_8dp" android:paddingStart="@dimen/padding_8dp" android:paddingRight="@dimen/padding_8dp" android:paddingEnd="@dimen/padding_8dp" android:text="Download Now" android:background="@drawable/shape_btn" android:layout_margin="@dimen/padding_16dp"   android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
        </LinearLayout>

        <LinearLayout android:background="@android:color/transparent" android:layout_weight="0.35" android:layout_width="0dp"
                      android:layout_height="match_parent">

            <ImageView android:padding="@dimen/padding_16dp" android:src="@drawable/logounipma" android:paddingTop="4dp" android:id="@+id/app_img" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>